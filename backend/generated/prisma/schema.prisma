generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  email    String  @unique
  username String
  password String?
  provider String?
  status   Role    @default(USER)
}

model Todo {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  name        String @unique
  description String
  status      Status @default(UNCOMPLETED)
}

enum Role {
  USER
  ADMIN
}

enum Status {
  UNCOMPLETED
  COMPLETED
  INPROGRESS
}
